 <?php $__env->startSection('main'); ?> <h1>All Globalsettings</h1> <p><?php echo link_to_route('admin.globalsettings.create', 'Add new globalsetting'); ?></p> <?php if ($globalsettings->count()): ?> <table class="table table-striped table-bordered"> <thead> <tr> <th>Name</th> <th>Value</th> <th>Active</th> </tr> </thead> <tbody> <?php foreach ($globalsettings as $globalsetting): ?> <tr> <td><?php echo e($globalsetting->name); ?></td> <td><?php echo e($globalsetting->value); ?></td> <td><?php echo e($globalsetting->active); ?></td> <td><?php echo link_to_route('admin.globalsettings.edit', 'Edit', array($globalsetting->id), array('class' => 'btn btn-info')); ?></td> <td> <?php echo Form::open(array('method' => 'DELETE', 'route' => array('admin.globalsettings.destroy', $globalsetting->id))); ?> <?php echo Form::submit('Delete', array('class' => 'btn btn-danger')); ?> <?php echo Form::close(); ?> </td> </tr> <?php endforeach; ?> </tbody> </table> <?php else: ?> There are no globalsettings <?php endif; ?> <?php $__env->stopSection(); ?> <?php echo $__env->make('layouts.scaffold', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>