<?php if(!empty($data) && count($data)>0): ?> <div class="chatMessage"> <div class="pull-left"> <?php if($data['user_id'] == 0): ?> <?php echo $data['username']; ?> <?php else: ?> <?php echo $__env->make("prototypes.username", array("username"=>$data['username'], "avatar"=>$data['avatar'], "user_id"=>$data['user_id'], "link" => true, "avatarWidth"=>"16"), array_except(get_defined_vars(), array('__data', '__path')))->render(); ?> <?php endif; ?> <span class="column">:&nbsp;</span> </div> <small class="timeago chatMessageTime pull-right" title="<?php echo $data['time']; ?>"><?php echo $data['time']; ?></small> <?php if($data['user_id'] == 0): ?> ### <?php echo $data['msg']; ?> ### <?php else: ?> <?php echo $data['msg']; ?> <?php endif; ?> </div> <div class="clearer"></div> <?php endif; ?>