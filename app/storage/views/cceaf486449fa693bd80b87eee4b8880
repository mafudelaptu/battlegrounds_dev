<?php if(count($data) > 0 && !empty($data)): ?> <table class="table table-striped" cellpadding="0" cellspacing="0" border="0"> <thead> <tr align="center"> <th>#</th> <th>Player</th> <th>Points</th> </tr> </thead> <tbody> <?php $vielfaches = $eventSubsCount/$event->min_submissions; ?> <?php if(floor($vielfaches) == 0): ?> <?php $vielfaches = 1; ?> <?php else: ?> <?php $vielfaches = floor($vielfaches); ?> <?php endif; ?> <?php $grenzeRot = $vielfaches*$event->min_submissions; $i = 1; ?> <?php foreach($data as $k => $v): ?> <?php if(Auth::user()->id == $v->user_id): ?> <?php $trClass = "info"; ?> <?php elseif( $i > $grenzeRot): ?> <?php $trClass = "danger"; ?> <?php else: ?> <?php $trClass = ""; ?> <?php endif; ?> <?php if(time() >= strtotime($event->end_submission_at) && time() < strtotime($event->start_at)): ?> <?php if($v->ready == "1"): ?><?php $trClass = "success"; ?> <?php elseif( $v->ready == "-1"): ?> <?php $trClass = "danger"; ?> <?php else: ?> <?php if(Auth::user()->id == $v->user_id): ?> <?php $trClass = "info"; ?> <?php else: ?> <?php $trClass = ""; ?> <?php endif; ?> <?php endif; ?> <?php elseif(time() >= strtotime($event->start_at)): ?> <?php if($v->created_event_id > 0): ?><?php $trClass = "success"; ?> <?php else: ?> <?php $trClass = "danger"; ?> <?php endif; ?> <?php endif; ?> <tr class="<?php echo $trClass; ?>"> <td><strong><?php echo $i; ?>.</strong></td> <td><a href="profile/<?php echo $v->user_id; ?>" target="_blank"><img src="<?php echo $v->avatar; ?>" alt="<?php echo $v->name; ?>'s Avatar"> <?php echo $v->name; ?></a></td> <td><?php echo $v->points; ?></td> </tr> <?php $i++; ?> <?php endforeach; ?> </tbody> </table> <?php else: ?> no Data <?php endif; ?>