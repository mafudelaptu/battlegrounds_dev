 <div class="label label-default"> <?php echo $points; ?> </div> <?php if($matchState == "closed" || $matchState == "canceled"): ?> <?php if(strpos($pointsChange, '-') === 0): ?> <?php $textClass = "danger"; $textAddition = ""; ?> <?php else: ?> <?php if($pointsChange != "0" && $pointsChange != 0): ?> <?php $textClass = "success"; $textAddition = "+"; ?> <?php else: ?> <?php $textClass = ""; $textAddition = ""; ?> <?php endif; ?> <?php endif; ?> <span class="text-<?php echo $textClass; ?>"> <?php echo $textAddition; ?><?php echo $pointsChange; ?> </span> <?php else: ?> <span class="text-success"> +<?php echo $winPoints; ?> </span> / <span class="text-danger"> -<?php echo $losePoints; ?> </span> <?php endif; ?>